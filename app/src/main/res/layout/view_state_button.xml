<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/state_button_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_sd_title"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="客厅状态"
        android:textColor="#000"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/tv_sb_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="温度：29°C"
        android:textColor="#737A83"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_sb_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:text="湿度：16%"
        android:textColor="#737A83"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_sb_methanal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="甲醛：1TTB"
        android:textColor="#737A83"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/sb_iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/state_superscript" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
</LinearLayout>