<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="房屋信息"
            android:textColor="#535353"
            android:textSize="34dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F4F9"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="900dp"
            android:layout_height="810dp"
            android:layout_margin="10dp"
            android:background="@drawable/saloon_bg">


            <ImageView
                android:id="@+id/iv_sf_signal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="600dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/rocketer" />
            <ImageView
                android:id="@+id/iv_sf_signa2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="280dp"
                android:visibility="invisible"
                android:background="@drawable/rocketer" />
            <ImageView
                android:id="@+id/iv_sf_signa3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="400dp"
                android:visibility="invisible"
                android:background="@drawable/rocketer" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="750dp"
            android:layout_height="810dp"
            android:layout_margin="10dp"
            android:background="@drawable/statebutton_bg"
            android:orientation="horizontal">


            <ui.view.StateButton
                android:id="@+id/fc_sb_saloon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"

                />

            <ui.view.StateButton
                android:id="@+id/fc_sb_dining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/fc_sb_saloon" />

            <ui.view.StateButton
                android:id="@+id/fc_sb_wc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/fc_sb_dining" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="237dp"
                android:layout_height="256dp"
                android:layout_alignStart="@id/fc_sb_saloon"
                android:layout_below="@id/fc_sb_saloon"
                android:layout_marginTop="5dp"
                android:background="@drawable/state_tv_bg" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="237dp"
                android:layout_height="256dp"
                android:layout_alignRight="@id/fc_sb_saloon"
                android:layout_alignStart="@id/fc_sb_saloon"
                android:layout_below="@id/text1"
                android:layout_marginTop="5dp"
                android:background="@drawable/state_tv_bg" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="237dp"
                android:layout_height="256dp"
                android:layout_alignRight="@id/fc_sb_wc"
                android:layout_alignStart="@id/fc_sb_wc"
                android:layout_below="@id/fc_sb_wc"
                android:layout_marginTop="5dp"
                android:background="@drawable/state_tv_bg" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="237dp"
                android:layout_height="256dp"
                android:layout_alignRight="@id/fc_sb_wc"
                android:layout_alignStart="@+id/fc_sb_wc"
                android:layout_below="@id/text3"
                android:layout_marginTop="5dp"
                android:background="@drawable/state_tv_bg" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="237dp"
                android:layout_height="517dp"
                android:layout_alignStart="@+id/fc_sb_dining"
                android:layout_alignTop="@+id/text3"
                android:background="@drawable/state_show"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/fs_tv_state"
                    style="@style/titleStyle"
                    android:layout_marginLeft="10dp"
                    android:text="客厅状态："
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/fs_tv_wendu"
                    style="@style/titleStyle"
                    android:text="温度：未知" />

                <TextView
                    style="@style/titleStyle"
                    android:id="@+id/fs_tv_shudu"
                    android:text="湿度：未知" />

                <TextView
                    style="@style/titleStyle"
                    android:id="@+id/fs_tv_jiaquan"
                    android:text="甲醛：未知" />

                <TextView
                    style="@style/titleStyle"
                    android:id="@+id/fs_tv_pm10"
                    android:text="PM10：未知" />

                <TextView
                    android:id="@+id/fs_tv_pmm2"
                    style="@style/titleStyle"
                    android:layout_marginLeft="30dp"
                    android:text="PM2.5：未知" />


                <TextView
                    android:id="@+id/fs_tv_kongqizhil"
                    style="@style/titleStyle"
                    android:layout_marginLeft="25dp"
                    android:text="空气质量：未知" />

                <TextView
                    android:id="@+id/fs_tv_ey"
                    style="@style/titleStyle"
                    android:layout_marginLeft="25dp"
                    android:text="二氧化碳：未知" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>